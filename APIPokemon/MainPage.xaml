<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APIPokemon.MainPage">

    <StackLayout>
        <Frame BackgroundColor="White" Padding="24" CornerRadius="0">
            <Label Text="Trabalho Prático 03" HorizontalTextAlignment="Center" TextColor="Gray" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtTexto" Placeholder="Nome ou Número do Pokémon" />

        <Button x:Name="btnOk" Text="Enviar" BackgroundColor="#5D74FF" TextColor="White" CornerRadius="5" Clicked="btnOk_Clicked"/>

        <Label Text="Aplicativo desenvolvido utilizando a PokéAPI" HorizontalOptions="CenterAndExpand"/>

        <Button Text="Créditos" Clicked="Button_Clicked_2"/>
    </StackLayout>

</ContentPage>
